<%- include('partials/head', {title: 'Välkommen'} ); %>

<div class="mx-auto max-w-3xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <h1 class="sr-only">Page title</h1>
    <!-- Main 3 column grid -->
    <div class="grid grid-cols-1 items-start gap-4 lg:grid-cols-3 lg:gap-8">
        <!-- Left column -->
        <div class="grid grid-cols-1 gap-4 lg:col-span-2">
            <section aria-labelledby="section-1-title">
            <h2 class="sr-only" id="section-1-title">Section title</h2>
            <div class="overflow-hidden rounded-lg bg-white shadow">
                <div class="p-6">
                    <% if (message.length > 0) { %>
                        <div class="bg-yellow-100 p-10 mb-20">
                            <ul>
                                <% message.forEach(msg => { %>
                                    <li><%= msg %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>


                    <h1>Hej <%= name %> </span></h1>

                    <div class="max-w-lg">
                        <p class="mt-10">Lotenetur vitae facere error iusto molestiae accusamus magni delectus aliquid quasi quisquam delectus aliquid quasi quisquam qui iure odit alias voluptatem esse? Qui, adipisci.</p>
                    </div>

                     <button class="mt-8 px-4 py-2 bg-blue-300 text-white" onclick="getUserFavoriteColor()">Hämta favoritfärg</button>

                    <a class="inline-block mt-8 px-4 py-2 bg-blue-300 text-white" href="/logout">Logout</a>

                </div>
                </div>
            </section>
        </div>

        <!-- Right column -->
        <div class="grid grid-cols-1 gap-4">
        <section aria-labelledby="section-2-title">
            <h2 class="sr-only" id="section-2-title">Section title</h2>
            <div class="overflow-hidden rounded-lg bg-white shadow">
            <div class="p-6">
                <!-- Your content -->
            </div>
            </div>
        </section>
        </div>
    </div>
</div>



    <script>
        function getUserFavoriteColor(){
            fetch('http://localhost:3000/api/getfavoritecolor')
            .then(data => {
                return data.json();
            })
            .then(json => {
                console.log(json.color);
            });
        }
    </script>


